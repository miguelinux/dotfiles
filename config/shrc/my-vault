if ! test -f ${XDG_RUNTIME_DIR}/my-vault.lock
then
    if test -f ${HOME}/.config/my-vault.sh.conf
    then
        ${HOME}/.local/bin/my-vault.sh
        touch ${XDG_RUNTIME_DIR}/my-vault.lock
    fi
fi
